$spinner-color = #3F51B5
$spinner-size = 50px

#spinner
  position: absolute
  top: 50%
  left: 50%
  transform: translateX(-50%) translateY(-50%)
  width: $spinner-size
  height: $spinner-size
  overflow: hidden

  &:before
  &:after
    content: ' '
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    border-radius: 50%
    background-color: $spinner-color
    opacity: 0.4
    animation: bounce 1.6s infinite ease-in-out

  &:after
    animation-delay: -0.4s

@keyframes bounce
  0%, 100%
    transform: scale(0.1)
  60%
    transform: scale(1.0)
