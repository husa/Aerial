html, body, #root
  margin: 0
  padding: 0
  width: 100%
  height: 100%
  overflow: hidden
  font-family: 'Helvetica Neue', 'Calibri Light', Arial, sans-serif
  font-size: 16px
  user-select: none

body
  background: #fefefe



#root
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center

$spinner-color = #3F51B5
$spinner-size = 50px

#spinner
  position: relative
  // top: 50%
  // left: 50%
  // transform: translateX(-50%) translateY(-50%)
  width: $spinner-size
  height: $spinner-size
  overflow: hidden

  &:before
  &:after
    content: ' '
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    border-radius: 50%
    background-color: $spinner-color
    opacity: 0.4
    animation: bounce 1.6s infinite ease-in-out

  &:after
    animation-delay: -0.4s

@keyframes bounce
  0%, 100%
    transform: scale(0.1)
  60%
    transform: scale(1.0)


#offline-message
  display: none
  font-size: 1.1em
  padding: 10px
  text-align: center

  img
    display: inline-block
